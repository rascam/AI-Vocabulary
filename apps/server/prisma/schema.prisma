// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  hashedPass String
  name  String?
  userSrcLang String
  userTargetLang String
  userLevel Level
  learningDirection Direction
  slowSpeech Boolean
  words Int[]
  score Int
}

model Words {
  id Int @id @default(autoincrement())
  srcWord String
  targetWord String
  imgUrl String
  
}

enum Level {
  beginner
  sophisticated
}

enum Direction {
  srcToTarget
  targetToSrc
}


model Language {
  langCode String @unique
  langCodeSpecific String
}