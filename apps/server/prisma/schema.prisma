// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  hashedPassword String
  name  String?
  userSrcLang String
  userTargetLang String
  userLevel Level @default(beginner)
  learningDirection Direction @default(srcToTarget)
  slowSpeech Boolean @default(false)
  words Word[]
  userVocCount Int @default(0)
  score Int @default(0)
}

model Word {
  id Int @id @default(autoincrement())
  userId String 
  user User @relation(fields: [userId], references: [id])
  srcWord String
  targetWord String
  imgUrl String @default("")
  credits String @default("")
  voice String  @default("")
  voiceSlow String @default("")
  bin Int @default(0)
}

enum Level {
  beginner
  sophisticated
}

enum Direction {
  srcToTarget
  targetToSrc
}
